<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<GridPane hgap="10" vgap="10" id="GridPane" prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs0318.MainController">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <children>
        <Button 
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            text="Add Customer" 
            onAction="#addCustomerAction" 
            fx:id="addCustomerButton"
        />
        <Button 
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            text="Add Appointment" 
            onAction="#addAppointmentAction" 
            fx:id="addAppointmentButton"
        />
        
        <Button
            text="←"
            GridPane.columnIndex="2"
            GridPane.rowIndex="0"
            onAction="#decrementMonth" 
        />
        <Label
            fx:id="monthLabel"
            text="Month"
            GridPane.columnIndex="3"
            GridPane.rowIndex="0"
        />
        <Label
            fx:id="yearLabel"
            text="Year"
            GridPane.columnIndex="4"
            GridPane.rowIndex="0"
        />
        <Button
            text="→"
            GridPane.columnIndex="5"
            GridPane.rowIndex="0"
            onAction="#incrementMonth" 
        />
        <fx:define>
            <ToggleGroup fx:id="viewType"/>  
        </fx:define>
        <ToggleButton
            text="Month"
            fx:id="monthToggle"
            GridPane.columnIndex="6"
            GridPane.rowIndex="0"
            toggleGroup="$viewType"
        />
        <ToggleButton
            text="Week"
            fx:id="weekToggle"
            GridPane.columnIndex="7"
            GridPane.rowIndex="0"
            toggleGroup="$viewType"
        />
        <GridPane
            fx:id="calendarGrid"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            GridPane.columnSpan="7"
        />
    </children>
</GridPane>
