<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<GridPane id="GridPane" hgap="10" vgap="10" prefHeight="400.0" prefWidth="320" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs0318.CustomerController">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <children>
         <Label    
            fx:id="title"           
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="2"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            fx:id="idLabel"
            text="%id"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            fx:id="idText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            fx:id="nameLabel"
            text="%name"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            fx:id="nameText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            fx:id="addressLabel"
            text="%address"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            fx:id="addressText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            fx:id="address2Label"
            text="%address2"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            fx:id="address2Text"
        />

        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            fx:id="countryLabel"
            text="%country"
        />
        <ChoiceBox 
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            fx:id="countrySelect"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            fx:id="cityLabel"
            text="%city"
        />
        <ChoiceBox 
            GridPane.columnIndex="1"
            GridPane.rowIndex="6"
            fx:id="citySelect"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="7"
            fx:id="postalCodeLabel"
            text="%postalCode"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="7"
            fx:id="postalCodeText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="8"
            fx:id="phoneLabel"
            text="%phone"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="8"
            fx:id="phoneText"
        />
        <fx:define>
            <ToggleGroup fx:id="active"/>
        </fx:define>
        <RadioButton 
            text="Active" 
            fx:id="activeButton" 
            toggleGroup="$active"
            GridPane.columnIndex="0"
            GridPane.rowIndex="9"
        />
        <RadioButton 
            text="Inactive" 
            fx:id="inactiveButton"
            toggleGroup="$active"
            GridPane.columnIndex="1"
            GridPane.rowIndex="9"
        />
        <Button
            GridPane.columnIndex="0"
            GridPane.rowIndex="10"
            text="%cancel"
            fx:id="cancelButton"
            onAction="#handleCancelAction"
        />
        <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="10"
            text="%save"
            fx:id="saveButton"
            onAction="#handleSaveAction"
        />
    </children>
</GridPane>
