<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<GridPane id="GridPane" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs0318.AppointmentController">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <children>
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            fx:id="idLabel"
            text="ID"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            fx:id="idText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            fx:id="customerLabel"
            text="Customer"
        />
        <ChoiceBox 
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            fx:id="customerSelect"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            fx:id="titleLabel"
            text="Title"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            fx:id="titleText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            fx:id="descriptionLabel"
            text="Description"
        />
        <TextArea 
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            fx:id="descriptionText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            fx:id="locationLabel"
            text="Location"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            fx:id="locationText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            fx:id="contactLabel"
            text="Contact"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            fx:id="contactText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            fx:id="typeLabel"
            text="Type"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="6"
            fx:id="typeText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="7"
            fx:id="urlLabel"
            text="URL"
        />
        <TextField 
            GridPane.columnIndex="1"
            GridPane.rowIndex="7"
            fx:id="urlText"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="8"
            fx:id="startLabel"
            text="Start"
        />
        <DatePicker 
            GridPane.columnIndex="1"
            GridPane.rowIndex="8"
            fx:id="startDate"
        />
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="9"
            fx:id="endLabel"
            text="End"
        />
        <DatePicker 
            GridPane.columnIndex="1"
            GridPane.rowIndex="9"
            fx:id="endDate"
        />
        <Button
            GridPane.columnIndex="0"
            GridPane.rowIndex="10"
            text="Cancel"
            fx:id="cancelButton"
            onAction="#handleCancelAction"
        />
        <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="10"
            text="Save"
            fx:id="saveButton"
            onAction="#handleSaveAction"
        />
    </children>
</GridPane>
